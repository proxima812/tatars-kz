---
import { Image } from "astro:assets"
import Date from "../Date.astro"

const { data, slug } = Astro.props
---

<article
	aria-label={`Пост: ${data.title}`}
	class="group border-2 border-white rounded-xl  break-inside-avoid mb-6"
>
	<a href={`/posts/${slug}`} class="group overflow-hidden rounded-xl">
		{
			data.ogImage && (
				<Image
					class="w-full max-w-full group-hover:scale-[1.01] ease-linear transition-transform rounded-xl object-cover"
					format="webp"
					quality={30}
					src={data.ogImage}
					alt={data.title}
				/>
			)
		}

		<div
			class="p-4 -mt-4 group-hover:bg-white/80 backdrop-brightness-75 backdrop-blur-sm ease-linear group-hover:-mt-5 transition-all duration-75 relative border bg-white flex rounded-xl flex-col gap-2"
		>
			<h2 class="font-bold text-lg leading-tight line-clamp-2">{data.title}</h2>
			<Date class="" data={data} />
		</div>
	</a>
</article>
